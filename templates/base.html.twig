<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="https://bootswatch.com/4/flatly/bootstrap.min.css" rel="stylesheet">
    <style>
        .container{
            margin: 0;
            padding: 0;
            width: 100vw;
        }
        form{
            margin-left: 4em;
        }
    </style>

    {% block stylesheets %}
    {% endblock %}
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">E-Movies</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('home.home') }}">Home<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Movies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Games</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Videos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Kids</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Sports</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin.movie') }}"><button type="button" name="movie" class="btn btn-primary float-left">Add movie</button></a>
                {% else %}
                {% endif %}
                {% if not app.user %}
                    <a href="{{ path('app_login') }}"><button class="btn btn-secondary my-2 my-sm-0" type="button">Login</button></a>
                {% else %}
                    <p class="btn btn-secondary my-2 my-sm-0"> Hello, {{ app.user.email }} </p>
                    <a href="{{ path('app_logout') }}"><button class="btn btn-secondary my-2 my-sm-0" type="button">Logout</button></a>
                {% endif %}
            </form>
        </div>
    </nav>
</header>
{% block body %}{% endblock %}

{% block javascripts %}{% endblock %}
</body>
</html>
