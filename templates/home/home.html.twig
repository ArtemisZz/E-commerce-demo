{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>

        .advertisement img{
            height: 50vh;
            width: 100vw;
        }


        .main {
            display: inline-block;
            vertical-align: top;
            text-align: left;
            margin: 0;
            padding: 2em;
            background-color: #2C3E50;
            color: white;
            width: 100vw;
        }

        .movie {
            width: 400px;
            height: 300px;
            background-color: #2C3E50;
            font-family: "Calibri Light";
        }

        .movie img {
            width: 100%;
            height: 70%;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="advertisement">
        <img src="https://wallpapershome.com/images/pages/ico_h/22515.jpg"><!-- I'm invisible! yey!-->
    </div>
    <div class="main">
        <div class="us">
            <h1>Top movies</h1>
            <br>
            {% for movie in movies %}
                <div class="movie">
                    <a href="{{ path('home.movie', {'id' : movie.id}) }}"><img src="{{ asset(movie.cinematicImage) }}"></a>
                    <p>{{ movie.name }}</p>
                    <p>{{ movie.genre }} | {{ movie.origin }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}